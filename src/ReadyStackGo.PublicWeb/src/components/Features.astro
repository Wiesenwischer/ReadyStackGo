---
import { t, type Lang } from '../i18n/translations';

interface Props {
	lang?: Lang;
}

const { lang = 'de' } = Astro.props;

const features = [
	{
		icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>`,
		titleKey: 'features.selfhosted.title' as const,
		descKey: 'features.selfhosted.desc' as const,
	},
	{
		icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>`,
		titleKey: 'features.oneclick.title' as const,
		descKey: 'features.oneclick.desc' as const,
	},
	{
		icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>`,
		titleKey: 'features.multienv.title' as const,
		descKey: 'features.multienv.desc' as const,
	},
	{
		icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>`,
		titleKey: 'features.webui.title' as const,
		descKey: 'features.webui.desc' as const,
	},
	{
		icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>`,
		titleKey: 'features.git.title' as const,
		descKey: 'features.git.desc' as const,
	},
	{
		icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>`,
		titleKey: 'features.logs.title' as const,
		descKey: 'features.logs.desc' as const,
	},
];
---

<section id="features" class="py-20 lg:py-28 bg-white dark:bg-gray-900">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<!-- Section header -->
		<div class="text-center max-w-2xl mx-auto mb-16">
			<span class="text-brand-500 font-semibold text-theme-sm uppercase tracking-wide">Features</span>
			<h2 class="text-title-md sm:text-title-lg font-bold text-gray-900 dark:text-white mt-3 mb-4">
				{t(lang, 'features.title')}
			</h2>
			<p class="text-gray-500 dark:text-gray-400 text-theme-xl">
				{t(lang, 'features.subtitle')}
			</p>
		</div>

		<!-- Features grid -->
		<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
			{features.map((feature) => (
				<div class="group p-8 rounded-2xl bg-gray-50 dark:bg-gray-800 hover:bg-brand-500 hover:shadow-theme-xl transition-all duration-300">
					<div class="w-14 h-14 bg-brand-50 dark:bg-brand-500/10 group-hover:bg-white/20 rounded-xl flex items-center justify-center mb-6 transition-colors">
						<svg class="w-7 h-7 text-brand-500 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={feature.icon} />
					</div>
					<h3 class="text-theme-xl font-semibold text-gray-900 dark:text-white group-hover:text-white mb-3 transition-colors">
						{t(lang, feature.titleKey)}
					</h3>
					<p class="text-gray-500 dark:text-gray-400 group-hover:text-white/80 transition-colors">
						{t(lang, feature.descKey)}
					</p>
				</div>
			))}
		</div>
	</div>
</section>
