---
import type { Lang } from '../i18n/translations';

interface Props {
	lang?: Lang;
}

const { lang = 'de' } = Astro.props;

const content = {
	de: {
		title: 'Impressum',
		responsible: 'Angaben gemäß § 5 TMG',
		contact: 'Kontakt',
	},
	en: {
		title: 'Legal Notice',
		responsible: 'Information according to § 5 TMG',
		contact: 'Contact',
	},
};

const c = content[lang];
---

<section class="py-16 lg:py-20 bg-white dark:bg-gray-900">
	<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
		<h1 class="text-title-lg font-bold text-gray-900 dark:text-white mb-8">{c.title}</h1>

		<div class="prose prose-gray dark:prose-invert max-w-none">
			<h2 class="text-title-sm font-semibold text-gray-900 dark:text-white mb-4">{c.responsible}</h2>
			<p class="text-gray-600 dark:text-gray-300 mb-6">
				Marcus Dammann<br />
				Harlerweg 14<br />
				26969 Butjadingen
			</p>

			<h2 class="text-title-sm font-semibold text-gray-900 dark:text-white mb-4">{c.contact}</h2>
			<p class="text-gray-600 dark:text-gray-300">
				E-Mail: <a href="mailto:marcus@dammann.io" class="text-brand-500 hover:text-brand-600">marcus@dammann.io</a>
			</p>
		</div>
	</div>
</section>
